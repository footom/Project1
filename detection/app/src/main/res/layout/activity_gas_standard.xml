<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gasStandard"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#C07AB8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_menu_24"
                app:tint="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="氣體濃度標準"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableRow>
                    <TextView
                        android:layout_width="410dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="瓦斯濃度標準"
                        android:textSize="24dp"
                        android:textStyle="bold"/>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#8f9193">

                <TableRow
                    android:background="#8f9193"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp">
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"

                        android:text="學名"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text=" 化學式 "
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text=" 爆炸下限 "
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="比重(空氣=1)"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:background="#ffffff"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:text=" 甲烷 "
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:background="#ffffff"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:text=" CH4 "
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:text=" 50000ppm "
                        android:background="#ffffff"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text=" 0.55 "
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:text=" 丙烷 "
                        android:background="#ffffff"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text="   C3H8 "
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text=" 21000ppm "
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:gravity="center_horizontal"
                        android:text=" 1.56 "
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text=" 丁烷 "
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text="     C4H10 "
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text=" 19000ppm "
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text=" 2.01 "
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text="    異丁烷 "
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text="     C4H10 "
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text=" 18000ppm "
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="#ffffff"
                        android:text=" 2.01 "
                        android:textSize="15dp" />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="18dp" />
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableRow>
                    <TextView
                        android:layout_width="410dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="一氧化碳標準濃度"
                        android:textSize="24dp"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8f9193">
                <TableRow>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="濃度"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="暴露時間對人體的影響"
                        android:textSize="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text=" 50ppm"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="一般而言8小時內尚無徵狀。"
                        android:textSize="15dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="   200ppm"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="2-3小時內輕微頭痛、噁心、疲倦感、暈眩。"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="   400ppm"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="1-2小時內劇烈頭痛、噁心、疲倦感、頭暈。"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="   800ppm"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="45分內噁心、抽搐，2小時內無意識，2-3小時內可能死亡。"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:text="  1600ppm"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="20分內頭痛、噁心、無意識，1小時內可能死亡。"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="  3200ppm"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="5-10分內頭痛、噁心、無意識，25-30分內可能死亡。"
                        android:textSize="15dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="  6400ppm"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@color/white"
                        android:text="1-2分內頭痛、噁心、無意識，大約在30分鐘之內死亡。"
                        android:textSize="15dp" />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/navigation_header"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>